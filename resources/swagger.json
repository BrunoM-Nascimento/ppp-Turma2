{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gestão de Tarefas",
    "version": "1.0.0",
    "description": "API REST para cadastro de administradores, usuários, tarefas e relatório de progresso. Autenticação via JWT."
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login de usuário ou administrador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT gerado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/admin/register": {
      "post": {
        "summary": "Cadastro de administrador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Administrador cadastrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "400": { "description": "Email já cadastrado" }
        }
      }
    },
    "/users/register": {
      "post": {
        "summary": "Cadastro de usuário comum",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "400": { "description": "Email já cadastrado" }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Listagem de usuários (admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a administradores" }
        }
      }
    },
    "/tasks": {
      "post": {
        "summary": "Criação de tarefa (admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "deadline": { "type": "string" },
                  "responsibleId": { "type": "integer" }
                },
                "required": ["title", "description", "deadline", "responsibleId"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarefa criada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a administradores" }
        }
      },
      "get": {
        "summary": "Listagem de tarefas (admin/usuário)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de tarefas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          },
          "401": { "description": "Token não fornecido" }
        }
      }
    },
    "/tasks/{id}/status": {
      "patch": {
        "summary": "Atualização de status da tarefa (usuário)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["não realizado", "em andamento", "concluído"] }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a usuários" },
          "404": { "description": "Tarefa não encontrada" }
        }
      }
    },
    "/tasks/{id}": {
      "put": {
        "summary": "Edição de tarefa (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "deadline": { "type": "string" },
                  "responsibleId": { "type": "integer" },
                  "status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarefa editada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a administradores" },
          "404": { "description": "Tarefa não encontrada" }
        }
      },
      "delete": {
        "summary": "Exclusão de tarefa (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Tarefa excluída" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a administradores" },
          "404": { "description": "Tarefa não encontrada" }
        }
      }
    },
    "/tasks/report": {
      "get": {
        "summary": "Relatório de progresso (admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Relatório de progresso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "concluido": { "type": "integer" },
                    "andamento": { "type": "integer" },
                    "pendente": { "type": "integer" }
                  }
                }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Acesso restrito a administradores" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "user"] },
          "tasks": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Task" }
          }
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "deadline": { "type": "string" },
          "responsibleId": { "type": "integer" },
          "status": { "type": "string", "enum": ["não realizado", "em andamento", "concluído"] }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
